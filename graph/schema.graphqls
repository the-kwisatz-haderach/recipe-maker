# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Recipe {
  id: ID!
  recipe_name: String!
}

type RecipeRole {
  id: ID!
  recipe_id: ID!
  user_id: ID!
  relation: String!
}

type Query {
  recipes: [Recipe!]!
  recipe(id: ID!): Recipe
}

input RecipeInput {
  recipe_name: String!
}

type Mutation {
  createRecipe(input: RecipeInput!): Recipe!
}
